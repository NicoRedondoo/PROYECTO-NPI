<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F1F1F1"
    tools:context=".InformacionActivity">

    <com.example.proyectonpi.view.UpperBar
        android:id="@+id/upperBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Información general"
        android:textSize="36sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/upperBar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"
        android:textColor="#3E4A59" />

    <TextView
        android:id="@+id/tvSubTitle"
        android:layout_width="317dp"
        android:layout_height="61dp"
        android:layout_marginTop="8dp"
        android:text="Accede a toda la información que necesitas sobre procedimientos, becas, matrícula, Erasmus, ...."
        android:textColor="#6C757D"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvTitle" />

    <Button
        android:id="@+id/btnCalendarioDocente"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/button_rounded"
        android:text="Calendario Docente"
        android:textColor="#F7F7F2"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvSubTitle" />

    <Button
        android:id="@+id/btnCalendarioExamenes"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Calendario Exámenes"
        android:background="@drawable/button_rounded"
        android:textColor="#F7F7F2"
        android:textStyle="bold"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/btnCalendarioDocente"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginHorizontal="16dp" />

    <Button
        android:id="@+id/btnCalendarioTramites"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Calendario de Trámites (Alteración matrícula, Erasmus, ...)"
        android:background="@drawable/button_rounded"
        android:textColor="#F7F7F2"
        android:textStyle="bold"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/btnCalendarioExamenes"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginHorizontal="16dp" />

    <Button
        android:id="@+id/btnHorarios"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Horario profesores y tutorías"
        android:background="@drawable/button_rounded"
        android:textColor="#F7F7F2"
        android:textStyle="bold"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/btnCalendarioTramites"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginHorizontal="16dp" />

    <Button
        android:id="@+id/btnBiblioteca"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Biblioteca"
        android:background="@drawable/button_rounded"
        android:textColor="#F7F7F2"
        android:textStyle="bold"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/btnHorarios"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginHorizontal="16dp" />


</androidx.constraintlayout.widget.ConstraintLayout>

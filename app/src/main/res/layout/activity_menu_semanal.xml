<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F1F1F1"
    tools:context=".MenuSemanalActivity">

    <com.example.proyectonpi.view.UpperBar
        android:id="@+id/upperBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Menú de la semana"
        android:textSize="36sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/upperBar" />

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvTitle"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <androidx.cardview.widget.CardView
                android:id="@+id/cardLunes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:cardElevation="4dp"
                app:cardCornerRadius="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:id="@+id/tvLunes"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Lunes"
                        android:textSize="22sp"
                        android:textStyle="bold"
                        android:textColor="#D12B2E" />

                    <TextView
                        android:id="@+id/tvLunesMenu"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Primero: Pote marinero\nSegundo: Ensalada Elisabeth\nAcompañamiento: Pisto de membrillo\nPostre: Banana"
                        android:textSize="20sp"
                        android:textStyle="normal" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cardMartes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:cardElevation="4dp"
                app:cardCornerRadius="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:id="@+id/tvMartes"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Martes"
                        android:textSize="22sp"
                        android:textStyle="bold"
                        android:textColor="#D12B2E" />

                    <TextView
                        android:id="@+id/tvMartesMenu"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Primero: Estofado de judías\nSegundo: Ternera carbonara\nAcompañamiento: Menestra\nPostre: Pera"
                        android:textSize="20sp"
                        android:textStyle="normal" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cardMiercoles"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:cardElevation="4dp"
                app:cardCornerRadius="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:id="@+id/tvMiercoles"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Miércoles"
                        android:textSize="22sp"
                        android:textStyle="bold"
                        android:textColor="#D12B2E" />

                    <TextView
                        android:id="@+id/tvMiercolesMenu"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Primero: Lasaña\nSegundo: Escalope de cerdo\nAcompañamiento: Pimientos fritos\nPostre: Piña"
                        android:textSize="20sp"
                        android:textStyle="normal" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cardJueves"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:cardElevation="4dp"
                app:cardCornerRadius="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:id="@+id/tvJueves"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Jueves"
                        android:textSize="22sp"
                        android:textStyle="bold"
                        android:textColor="#D12B2E" />

                    <TextView
                        android:id="@+id/tvJuevesMenu"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Primero: Pizza 4 quesos\nSegundo: Pechuga de pollo\nAcompañamiento: Ensalada\nPostre: Mandarinas"
                        android:textSize="20sp"
                        android:textStyle="normal" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cardViernes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:cardElevation="4dp"
                app:cardCornerRadius="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:id="@+id/tvViernes"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Viernes"
                        android:textSize="22sp"
                        android:textStyle="bold"
                        android:textColor="#D12B2E" />

                    <TextView
                        android:id="@+id/tvViernesMenu"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Primero: Sopa Pilaf\nSegundo: Carrillada de cerdo\nAcompañamiento: Patatas a la pobre\nPostre: Banana"
                        android:textSize="20sp"
                        android:textStyle="normal" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>

<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:rotation="0"
    android:scaleX="1"
    android:scaleY="1">

    <com.example.proyectonpi.view.UpperBar
        android:id="@+id/upperBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <!-- CustomView CircularMenuView en la parte inferior -->


    <!-- Otras vistas que puedas tener en pantalla (por ejemplo, texto, botones, etc.) -->

    <com.example.proyectonpi.ui.vistas.CircularMenuView
        android:id="@+id/circularMenu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />

    <TextView
        android:id="@+id/summaryText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/upperBar"
        android:padding="20dp"
        android:layout_marginTop="150dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:background="#ADD8E6"
        android:textColor="@android:color/black"
        android:visibility="gone"
        android:textSize="18sp"
        android:gravity="center"/>


</RelativeLayout>

<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:rotation="0"
    android:scaleX="1"
    android:scaleY="1">

    <!-- CustomView CircularMenuView en la parte inferior -->
    <com.example.proyectonpi.ui.vistas.CircularMenuView
        android:id="@+id/circularMenu"
        android:layout_width="match_parent"
        android:layout_height="270dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />


    <!-- Otras vistas que puedas tener en pantalla (por ejemplo, texto, botones, etc.) -->

    <Button
        android:id="@+id/summaryButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:layout_alignParentBottom="true"
        android:text="Entrar" />

    <TextView
        android:id="@+id/summaryText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/summaryButton"
        android:layout_alignParentTop="true"
        android:padding="20dp"
        android:layout_marginTop="100dp"
        android:layout_marginBottom="250dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:background="#ADD8E6"
        android:textColor="@android:color/black"
        android:visibility="gone"
        android:textSize="18sp"
        android:gravity="center"/>


</RelativeLayout>

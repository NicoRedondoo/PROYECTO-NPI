<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F1F1F1"
    tools:context=".MiPerfilActivity">

    <com.example.proyectonpi.view.UpperBar
        android:id="@+id/upperBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mi perfil"
        android:textSize="36sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/upperBar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"
        android:textColor="#3E4A59" />

    <TextView
        android:id="@+id/tvSubTitle"
        android:layout_width="317dp"
        android:layout_height="61dp"
        android:layout_marginTop="8dp"
        android:text="¡Descubre la ETSIIT de forma mucho más personalizada!"
        android:textColor="#6C757D"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvTitle" />

    <Button
        android:id="@+id/btnHorarioPersonalizado"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/button_rounded"
        android:text="Horario personalizado"
        android:textColor="#3E4A59"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvSubTitle" />

    <Button
        android:id="@+id/btnConsultaExpediente"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Consulta de expediente"
        android:background="@drawable/button_rounded"
        android:textColor="#3E4A59"
        android:textStyle="bold"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/btnHorarioPersonalizado"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginHorizontal="16dp" />

    <Button
        android:id="@+id/btnConsultaMatricula"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Consulta Matrícula"
        android:background="@drawable/button_rounded"
        android:textColor="#3E4A59"
        android:textStyle="bold"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/btnConsultaExpediente"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginHorizontal="16dp" />

    <Button
        android:id="@+id/btnMisProfesores"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Mis profesores"
        android:background="@drawable/button_rounded"
        android:textColor="#3E4A59"
        android:textStyle="bold"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/btnConsultaMatricula"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginHorizontal="16dp" />

    <Button
        android:id="@+id/btnConsultaPrado"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Consulta estado acceso a Prado"
        android:background="@drawable/button_rounded"
        android:textColor="#3E4A59"
        android:textStyle="bold"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/btnMisProfesores"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginHorizontal="16dp" />

    <Button
        android:id="@+id/btnAccesoPrado"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Acceso a Prado"
        android:background="@drawable/button_rounded"
        android:textColor="#3E4A59"
        android:textStyle="bold"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/btnConsultaPrado"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginHorizontal="16dp" />

    <Button
        android:id="@+id/btnAccesoSWAD"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Acceso a SWAD"
        android:background="@drawable/button_rounded"
        android:textColor="#3E4A59"
        android:textStyle="bold"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/btnAccesoPrado"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginHorizontal="16dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
